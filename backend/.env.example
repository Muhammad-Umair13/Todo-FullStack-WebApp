# =============================================================================
# Phase II Todo API - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values

# Application
APP_NAME="Phase II Todo API"
DEBUG=true
NODE_ENV=development

# Database (Neon Serverless PostgreSQL or local PostgreSQL)
# For local development:
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/todo_phase_ii"
# For Neon:
# DATABASE_URL="postgresql://user:password@ep-xxx.us-east-1.aws.neon.tech/todo_phase_ii?sslmode=require"

# JWT Authentication
# Generate secure random strings for these (e.g., using: openssl rand -base64 32)
JWT_SECRET="your-jwt-secret-key-min-32-chars"
JWT_REFRESH_SECRET="your-refresh-secret-key-min-32-chars"
ACCESS_TOKEN_EXPIRY_MINUTES=15
REFRESH_TOKEN_EXPIRY_DAYS=7
ALGORITHM=HS256

# Security
# Generate: bcrypt.generate_password_hash("$ecret").decode()
SECRET_KEY="your-secret-key-for-password-hashing"
BCRYPT_ROUNDS=12

# CORS
# Comma-separated list of allowed origins
CORS_ORIGINS="http://localhost:3000,http://localhost:5173"

# Password Validation
PASSWORD_MIN_LENGTH=8
PASSWORD_MAX_LENGTH=128

# Email Validation
EMAIL_MAX_LENGTH=255

# Task Validation
TASK_TITLE_MIN_LENGTH=1
TASK_TITLE_MAX_LENGTH=200
TASK_DESCRIPTION_MAX_LENGTH=1000
